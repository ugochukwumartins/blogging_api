<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= pageTitle %>
    </title>
    <link rel="stylesheet" href="/css/add_product.css" />
</head>


<body>


  <% if (typeof user != 'undefined'){ %>
    <%- include('../layout/nav.ejs',{author : user.user_name}) %>
 <% } else{ %>
     <%- include('../layout/nav.ejs') %>   
     <% } %>

    <main>
        <form action="/search" method="post">
            <input type="text" name="book" value="" placeholder="Book Title or Author">
            <input type="submit">
        </form>
        <% if (blogs.length> 0){ %>
            <div class="wrapper">
                <% for(let blog of blogs) { %>
                    <a href="/get_a_published_blog/<%=blog._id %>">
                    <article class="box">
                        <header class="card_header">
                            <h1 class="product__title">
                                <%= blog.title %>
                            </h1>
                        </header>
                        <div class="card_image">
                            <p class="product__description">
                                <%= blog.tags %>
                            </p>
                        </div>
                      
                        <div class="card_content">
                           
                            <p class="product__description">
                                <%= blog.description %>
                            </p>
                        </div>

                      
                      
                    </article>
                </a>
                <div style="display:inline-block;
                padding: 0;
                margin: 0;
                
              ">
                      <% if (blog.state === "draft"){ %>
                    <a href="/get_a_published_blog/<%=blog._id %>" class="btn" >Publish</a>
                    <% } else{ %>
                    <a href="/get_a_published_blog/<%=blog._id %>" class="btn" >Edit</a>
                    <% }%>

                    <form action="/deleteBlog/<%=blog._id %>" method="post">
                        <button class="btn"  style="color: red; display:inline-flex;
                        padding: 0;
                        margin: 0;">Delete</button>
                      
                    </form>
                   
                    
                 
                 
                </div>
                    <% } %>
            </div>
            <% } else{ %>
                <h1>
                    No Products found
                </h1>
                <% } %>
    </main>
</body>

</html>


